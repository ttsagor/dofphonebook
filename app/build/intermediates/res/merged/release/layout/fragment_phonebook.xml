<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Pisystems.dofphonebook.activity.phonebook"
    android:clickable="true"
    android:focusableInTouchMode="true" >


    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:id="@+id/search_box"
        android:background="@drawable/background_border"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusableInTouchMode="true" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#00000000"
            android:hint="অনুসন্ধান করুন"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/searcheditbox"
            android:singleLine="true"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_search_category_default"
            android:clickable="true"
            android:focusableInTouchMode="true" />
    </RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phonebookvoicesearch"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_above="@+id/phonebookheader"
        android:layout_toRightOf="@+id/search_box"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/phonebookheader"
        android:text=""
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/search_box"
        android:clickable="true"
        android:focusableInTouchMode="true" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/areaList"
        android:layout_gravity="left|top"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/phonebookheader"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:fadeScrollbars="false"/>


</RelativeLayout>
