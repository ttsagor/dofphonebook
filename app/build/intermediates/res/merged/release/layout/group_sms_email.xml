<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/groupsmsbuttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:id="@+id/groupsmsemailtile"
            android:text="গ্রুপ এসএমএস/ইমেইল"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <Button
            android:id="@+id/groupsmsemailarea"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/listbar"
            android:textColor="#ffffff"
            android:text="এলাকা / প্রতিষ্ঠানভিত্তিক"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_weight="0.10" />
        <Button
            android:id="@+id/groupsmsemaildeg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/listbar"
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:text="পদবী অনুযায়ী"
            android:layout_weight="0.10" />
        <Button
            android:id="@+id/groupsmsemailfav"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/listbar"
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:text="ফেবারিট তালিকাভিত্তিক"
            android:layout_weight="0.10" />
    </LinearLayout>

</RelativeLayout>
