<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:orientation="horizontal"
                android:id="@+id/settinglayouthodler"
                android:layout_gravity="center"
                android:gravity="center">
                <ProgressBar
                    android:id="@+id/setting_loading_gif"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />
        </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/settingupdatetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="অ্যাপটি হালনাগাত করতে আপডেট বাটনে চাপ দিন"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/navigationBarColor"
                android:gravity="center"/>
        </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_gravity="center"
                android:gravity="center">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="আপডেট"
                android:id="@+id/settingsUpdate"
                android:background="@drawable/listbaruser"
                android:textColor="#FFFFFF"
                android:textSize="15dp"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
